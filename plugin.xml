<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="ionic-plugin-egee"
    version="0.1.0">
    <name>Egee</name>
    <description>Ionic Egee Plugin</description>
    <license>Apache 2.0</license>
    <keywords>Ionic,egee</keywords>

    <js-module src="www/egeePlugin.js" name="egeePlugin">
        <clobbers target="egeePlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Egee">
              <param name="android-package" value="io.ionic.egee.Egee" />
              <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/Egee.java" target-dir="src/io/ionic/egee" />
    </platform>

    <!-- windows -->
    <platform name="windows">
        <js-module src="src/windows/egeeProxy.js" name="EgeeProxy">
            <runs />
        </js-module>
        <framework src="src/windows/_lib/Egee/Egee.Proxy.csproj" custom="true" type="projectReference"/>
    </platform>
</plugin>
